    <link rel="stylesheet" href="/css/style.css">
    <title>Home</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
            <a class="navbar-brand" href="#">Linked Posts</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav m-auto">

                    <li class="nav-item">
                        <a class="nav-link" href="/home">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/profile">My Profile</a>
                    </li>
                </ul>

            </div>
            <div class="mr-5">
                <ul class="navbar-nav m-auto ">
                    <li class="nav-item dropdown ">
                        <a class="nav-link dropdown-toggle" href="/profile" id="navbarDropdown" role="button"
                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">

                           <img width="40" src="/img/man.jpg" alt="">
                           
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="/account_setting">Account Setting</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="/logout">Logout</a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
<div class="container mt-5 pt-5">
    <div class="row">
        <div class="col-md-8 m-auto card p-5">
            <div class="">
                <h3>Account Setting</h3>
                <hr>
                <form action="/seetingHndel" method="post">
                    <input value="<%= oldInputs.oldPass %>" name="oldPass" placeholder="Enter Old Password" type="text" class="form-control my-2">
                    <input value="<%= oldInputs.newPass %>" name="newPass" placeholder="New Password" type="text" class="form-control my-2">
                    <% if (errors.find(e=>e.param=='newPass')) { %>
                        <div class="alert alert-danger text-center my-3">
                            Password is not valid
                        </div>
                       <% } %>
                    <input value="<%= oldInputs.repeatPass %>" name="repeatPass" placeholder="Repeat Password" type="text" class="form-control my-2">
                    <% if (errors.find(e=>e.param=='repeatPass')) { %>
                        <div class="alert alert-danger text-center my-3">
                            password is not match
                        </div>
                       <% } %>
                    <button class="btn btn-info mt-3">Save Setting</button>
                </form>
            </div>
        </div>
    </div>
</div>
<%- include('footer.ejs') %> 
